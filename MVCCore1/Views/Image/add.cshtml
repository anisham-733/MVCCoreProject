@model MVCCore1.Models.Blobfiles;
    

@using (Html.BeginForm("add", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
        <fieldset class="form-horizontal">
            <div class="form-group">
                <br />
                <label class="control-label col-md-2" for="Photo">Photo</label>
                <div class="col-md-10">
                    <input type="file" name="photo" />
                    <p style="color:indianred";>File size should be less than 5 Mb.</p>
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn" />
                </div>

            </div>
        </fieldset>

}

